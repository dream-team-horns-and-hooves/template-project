{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "moduleResolution": "node",
    "strict": false,
    "jsx": "react",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@client/*": ["./src/client/*"],
      "@core/*": ["./src/core/*"],
      "@libs/*": ["./src/libs/*"],
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    }
  },
  "include": ["src"],
  "files": ["src/index.tsx"]
}
